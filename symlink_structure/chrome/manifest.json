{
  "manifest_version": 2,

  "name": "StickyNotes",
  "description": "You can add notes to pages",
  "version": "1.0",

  "browser_action": {
    "default_icon" : "shared/images/icon.png",
    "default_title" : "StickyNotes"
  },

  "icons": {
    "128" : "shared/images/icon.png"
    },

  "background": {
    "scripts": [
      "shared/lib/jquery-1.11.1.js",
      "shared/lib/underscore.js",
      "shared/lib/underscore.string.js",
      "shared/lib/backbone.js",
      "shared/lib/haml.js",
      "chrome/chrome_browser_adapter.js",
      "shared/js/background.js",
      "chrome/global.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "shared/lib/jquery-1.11.1.js",
        "shared/lib/underscore.js",
        "shared/lib/underscore.string.js",
        "shared/lib/backbone.js",
        "shared/lib/haml.js",
        "chrome/chrome_browser_adapter.js",
        "shared/js/injected.js"
      ],
      "css" : [
        "shared/css/styles.css"
      ]
    }
  ],

  "permissions" : ["storage", "tabs", "http://localhost:3000/*"],
  "content_security_policy": "script-src 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": []

}
